---
import { withWebpSupport } from '../utils/storyblokUtils.js';

interface Props {
  name: string;
  image?: string;
}

const { name, image } = Astro.props;
---

<div class="tech-badge">
  <!-- {image && <img
  src={withWebpSupport(image)}

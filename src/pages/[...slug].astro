---
import BaseLayout from "../layouts/BaseLayout.astro";
import { useStoryblokApi } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";

export async function getStaticPaths() {
  const sbApi = useStoryblokApi();

  const { data } = await sbApi.get("cdn/stories", {
    version: import.meta.env.DEV ? "draft" : "published",
  });

  let stories = Object.values(data.stories);

  stories = stories.filter(
    (story: any) => !story.full_slug.startsWith("technologies-used/") && story.full_slug !== "config"
  );

  return stories.map((story: any) => {
    return {
      params: { slug: story.full_slug === "home" ? undefined : story.full_slug },
    };
  });
}

const sbApi = useStoryblokApi();
const { slug } = Astro.params;

const { data } = await sbApi.get(`cdn/stories/${slug === undefined ? "home" : slug}`, {
  version: import.meta.env.DEV ? "draft" : "published",
  resolve_relations: ["featuredFromCollection.items", "project.technologies"],
});

const story = data.story;
---

<BaseLayout story={story}>
  <StoryblokComponent blok={story.content} />
</BaseLayout>
